#!/usr/bin/env bash
# This script configures Nginx to include a custom HTTP response header.

# Update the package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Define the custom header value (hostname of the server)
HEADER_VALUE=$(hostname)

# Configure Nginx to include the custom header
echo "add_header X-Served-By $HEADER_VALUE;" | sudo tee -a /etc/nginx/sites-available/default

# Reload Nginx to apply changes
sudo service nginx reload
